<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="시간표">
        <ListPreference
            app:key="class"
            app:summary="학년과 반을 설정해주세요."
            app:title="학년 / 반 설정" />
    </PreferenceCategory>

    <PreferenceCategory app:title="학습실 신청 설정">
        <EditTextPreference
            app:key="ablrID"
            app:summary="스마트 기숙관리 시스템의 id를 입력하세요."
            app:title="ID" />
        <EditTextPreference
            app:key="ablrPW"
            app:summary="스마트 기숙관리 시스템의 비밀번호를 입력하세요."
            app:title="비밀번호" />
        <SwitchPreference
            app:key="saveHomeFragmentEditedData"
            app:summaryOff="Home에서 편집한 데이터를 자동으로 동기화하지 않습니다.\n설정시 기존 데이터는 사라집니다."
            app:summaryOn="Home에서 편집한 데이터를 자동으로 동기화합니다."
            app:title="Home에서 편집한 데이터를 영구히 저장" />

    </PreferenceCategory>

    <PreferenceCategory app:title="자가진단 자동화">
        <EditTextPreference
            app:key="asckPW"
            app:summary="자가진단할때 사용하는 비밀번호를 입력하세요."
            app:title="비밀번호" />

        <SwitchPreference
            app:key="asckAlert"
            app:summaryOff="매일 아침 자가진단 알림을 받지 않습니다."
            app:summaryOn="매일 아침 자가진단 알림을 받습니다."
            app:title="매일 아침 자가진단 알림받기" />

        <SwitchPreference
            app:defaultValue="false"
            app:key="asckAdv"
            app:title="Use advanced options" />

        <EditTextPreference
            app:dependency="asckAdv"
            app:key="dt"
            app:summary="Delay time in automatic self check logic"
            app:title="dt" />

        <EditTextPreference
            app:dependency="asckAdv"
            app:key="dsel"
            app:summary="Delay time in automatic self check selection logic"
            app:title="dsel" />

        <EditTextPreference
            app:dependency="asckAdv"
            app:key="ds"
            app:summary="Delay time in automatic self check logic starts"
            app:title="ds" />

    </PreferenceCategory>

    <PreferenceCategory app:title="시간표">
        <SwitchPreference
            app:key="timetable_swd"
            app:summary="변경된 시간표를 알림으로 알려줍니다."
            app:title="변경된 시간표 알림 수신하기" />

        <SwitchPreference
            app:dependency="timetable_swd"
            app:key="timetable_always"
            app:summary="매시간 시간표를 알림으로 알려줍니다.\n이 기능을 사용하기 위해선 변경된 시간표 알림을 받아야합니다."
            app:title="매시간 시간표 알림 수신하기" />
    </PreferenceCategory>

    <PreferenceCategory android:title="일반">
        <Preference
            app:key="reloadData"
            app:summary="앱의 데이터를 다시 로드합니다."
            app:title="데이터 다시 로드" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Debug Options">
        <SwitchPreference
            app:key="debugFCM"
            app:title="Receive DEBUG FCM Data" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Developers" >
        <Preference app:title="Dayo" />
        <Preference app:title="Kiroo" />
        <Preference app:title="Hegel" />
        <Preference />
    </PreferenceCategory>
</PreferenceScreen>